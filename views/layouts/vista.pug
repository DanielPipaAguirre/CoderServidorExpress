extends layout

block partial 
    body
        .jumbotron(style="min-height: 100vh")
            h1(style="color:blue") Vista de Productos
            if hayProductos
                .table-responsive
                    table(class="table table-dark")
                        tr
                            th(style="vertical-align: middle") Nombre
                            th(style="vertical-align: middle") Precio
                            th(style="vertical-align: middle") Foto
                        each val in productos
                            tr
                                td(style="vertical-align: middle")=val.title
                                td(style="vertical-align: middle")=val.price
                                td(style="vertical-align: middle") 
                                    img(width="50", src=`${val.thumbnail}`, alt="not found")
            else 
                h3(class="alert alert-warning") No se encontraron productos
